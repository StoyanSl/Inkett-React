@model ProfileAlbumsViewModel

<div class="container" style="padding-right:135px">
    <partial name="_ProfilePartial" model="Model.Profile" />
    <div class="container bg-white p-2" style="margin-top:30px; border-radius:10px;">
        <div class="card-deck d-flex justify-content-start  py-2" style="padding:0">
            @if (Model.Albums.Count == 0)
            {
                if (Model.Profile.IsOwner)
                {
                    <h1 class="px-4 py-2"> You have no albums? Create one right <a href="/Profile/Edit"><b><u>Now!</u></b></a> </h1>

                }
                else
                {
                    <h1 class="px-4"> The user has no albums.</h1>
                }
            }
            @foreach (var albumViewModel in Model.Albums)
            {
                <partial name="_AlbumPartial" model="albumViewModel" />
            }
        </div>
    </div>
</div>
@section ProfileScripts{
    <script src="~/js/FollowButton.js" asp-append-version="true"></script>
}