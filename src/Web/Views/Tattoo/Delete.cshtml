@model TattooListedViewModel
@{
    ViewData["Title"] = "Create Album";
}

<div class="container p-3">
    <div class="row m-5 justify-content-center">
        <div class="col-sm-8 bg-white p-4" style="border-radius:10px">
            <form asp-controller="Tattoo" asp-action="Delete" asp-route-id="@Model.Id" enctype="multipart/form-data" method="post" class="form-horizontal">
                <div class=" flex-column d-flex justify-content-center ">
                    <h1>Do you want to delete this tattoo</h1>
                    <div class="align-self-center">
                        <img id="albumPic" class="img-fluid hoverCoverPic" style="border-radius:10px" src="@Model.PictureUri" />
                        <input type="hidden" asp-for="@Model.Id" />
                    </div>
                    <div class="align-self-center my-3 flex-grow">
                        <button type="submit" class="btn btn-danger btn-brand btn-brand-big mx-5">&nbsp;Delete&nbsp;</button>
                        <button type="button"
                                class="btn btn-secondary mx-5"
                                id="cancel"
                                onclick="window.history.back()">
                            Cancel
                        </button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
@section Scripts{
    <script>

         $(document).ready(function ()
    {
        $("#cancel").
            attr("onClick",
            "document.location.href='@Html.Raw(Url.Action("Index", "Home",
             new { id = Model.Id }))'");
    });
    </script>
}