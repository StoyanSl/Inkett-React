@model ProfileAlbumViewModel

<div class="container" style="padding-right:135px">
    <partial name="_ProfilePartial" model="Model.Profile" />
    <div class="container" style="margin-top:30px; padding:0">
        <div class="row">
            <div class="col-md-12 bg-white" style="border-radius: 40px;">
                <div class="d-flex align-items-stretch col-sm-12 offset-sm-0 " style="margin-bottom:10px">
                    <h1 class="mt-1 mr-2">@Model.Title</h1>
                    @if (Model.IsOwner)
                    {
                    <div class="flex-row align-content-end mt-2">
                        <div class="d-flex float-right align-content-end">
                            <div>
                                <button class=" m-1 btn btn-secondary btn-sm dropdown-toggle" type="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                    <b>...</b>
                                </button>
                                <div class="dropdown-menu">
                                    <a class="dropdown-item" asp-controller="Album" asp-action="Edit" asp-route-id="@Model.Id">Edit</a>
                                    <a class="dropdown-item" asp-controller="Album" asp-action="Delete" asp-route-id="@Model.Id">Delete</a>
                                </div>
                            </div>
                        </div>
                    </div>
                    }
                </div>
                <div class="align-self-center ml-3"><h4>@Model.Description</h4> </div>
                <div class="border m-2 mr-5"></div>
                @if (Model.Tattoos.Count == 0)
                {
                <h1 class="px-4"> The album is empty.</h1>
                }
                <partial name="_ListedTattoosContainer" model="Model.Tattoos" />
            </div>
        </div>
    </div>
</div>
@section ProfileScripts{
    <script src="~/js/FollowButton.js" asp-append-version="true"></script>
}