@model IndexViewModel
@{
    ViewData["Title"] = "Profile";
}
<partial name="_StatusMessage" for="StatusMessage" />
<div class="container">
    <div class="container d-flex justify-content-center">
        <div class="d-flex col-md-12 bg-white py-4 justify-content-center" style="border-radius: 40px;">
            <div class="col-md-10">
                <h4>@ViewData["Title"]</h4>
                <partial name="_StatusMessage" for="StatusMessage" />
                <div asp-validation-summary="All" class="text-danger"></div>
                <form method="post">
                    <div class="form-group">
                        <label asp-for="Email"></label>
                        <div class="input-group">
                            <input asp-for="Email" class="form-control" />
                            <span class="input-group-addon" aria-hidden="true"><span class="glyphicon glyphicon-ok text-success"></span></span>
                        </div>
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="FirstName"></label>
                        <div class="input-group">
                            <input asp-for="FirstName" class="form-control" />
                            <span class="input-group-addon" aria-hidden="true"><span class="glyphicon glyphicon-ok text-success"></span></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <label asp-for="LastName"></label>
                        <div class="input-group">
                            <input asp-for="LastName" class="form-control" />
                            <span class="input-group-addon" aria-hidden="true"><span class="glyphicon glyphicon-ok text-success"></span></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <label asp-for="BirthdayDate"></label>
                        <div class="input-group date" id="datetimepicker4" data-target-input="nearest">
                            <input asp-for="BirthdayDate" data-format="dd/MM/yyyy" type="text" class="form-control datetimepicker-input" data-target="#datetimepicker4" />
                            <div class="input-group-append" data-target="#datetimepicker4" data-toggle="datetimepicker">
                                <div class="input-group-text"><i class="fa fa-calendar"></i></div>
                            </div>
                        </div>
                    </div>
                    <button type="submit" class="btn btn-default">Save</button>
                </form>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.22.2/moment.min.js"></script>
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/tempusdominus-bootstrap-4/5.0.1/js/tempusdominus-bootstrap-4.min.js"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/tempusdominus-bootstrap-4/5.0.1/css/tempusdominus-bootstrap-4.min.css" />
    <script type="text/javascript">
        $(function () {
            $('#datetimepicker4').datetimepicker({
                format: 'L'
            });
        });
    </script>
}
